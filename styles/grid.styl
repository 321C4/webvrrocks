.row-container
  display: flex;
  flex-direction: column

.column-container
  display: flex;
  flex-direction: row

.row-container > .row, .column-container > .column
  flex: 1 1 0px

.row-container > .one-row, .column-container > .one-column
  flex: 1 1 0px

.row-container > .two-row, .column-container > .two-column
  flex: 2 2 0px

.row-container > .three-row, .column-container > .three-column
  flex: 3 3 0px

.row-container > .four-row, .column-container > .four-column
  flex: 4 4 0px

.row-container > .five-row, .column-container > .five-column
  flex: 5 5 0px

.row-container > .six-row, .column-container > .six-column
  flex: 6 6 0px

.row-container > .seven-row, .column-container > .seven-column
  flex: 7 7 0px

.row-container > .eight-row, .column-container > .eight-column
  flex: 8 8 0px

.row-container > .nine-row, .column-container > .nine-column
  flex: 9 9 0px

.row-container > .ten-row, .column-container > .ten-column
  flex: 10 10 0px

.row-container > .eleven-row, .column-container > .eleven-column
  flex: 11 11 0px

.row-container > .twelve-row, .column-container > .twelve-column
  flex: 12 12 0px

.row-container > .auto-row, .column-container > .auto-column
  flex: 0 0 auto

.gutter > *
  margin-left: 10px;
  margin-right: 10px